<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:cardElevation="8dp"
    app:contentPaddingLeft="7dp"
        android:layout_height="wrap_content" android:id="@+id/cvCategory"
        app:cardCornerRadius="10dp"
        android:layout_margin="14dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:elevation="8dp"

                android:outlineProvider="bounds"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView

                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/motor"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="5dp"
                    android:foreground="@drawable/gradient"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/container_tv"
                    android:id="@+id/ivImageCategory"
                    android:layout_width="match_parent"
                    android:layout_height="166dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@id/ivImageCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/container_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                    <TextView
                        android:fontFamily="@font/futura_pt_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tvInfoCategory"
                        android:id="@+id/tvNameCategory"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        />
                    <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/lightGray"
                        android:fontFamily="@font/futura_pt_book"
                        app:layout_constraintTop_toBottomOf="@id/tvNameCategory"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingBottom="15dp"
                        android:id="@+id/tvInfoCategory"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

