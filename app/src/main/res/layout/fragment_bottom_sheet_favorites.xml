<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="26dp"
    app:cardCornerRadius="16dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RadioGroup
        android:id="@+id/favoritesRadioGroupFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@id/rb2">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/favoritesBottomSheetFirstRB"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/futura_pt_demi"
            android:layoutDirection="rtl"
            android:textSize="20sp"
            tools:text="Свежее">

        </com.google.android.material.radiobutton.MaterialRadioButton>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/favoritesBottomSheetSecondRB"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/futura_pt_demi"
            android:layoutDirection="rtl"
            android:textSize="20sp"
            tools:text="Случайные">

        </com.google.android.material.radiobutton.MaterialRadioButton>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/favoritesBottomSheetThirdRB"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/futura_pt_demi"
            android:layoutDirection="rtl"
            android:textSize="20sp"
            tools:text="Случайные">

        </com.google.android.material.radiobutton.MaterialRadioButton>
    </RadioGroup>

</LinearLayout>